<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xlbs.apiservice.dao.imp.UserDao">

    <sql id="userField">
        id as userId,
        user_name as username,
        password as password,
        name as name,
        type as type,
        created_by as createdBy,
        creatd_date as creatdDate,
        last_modify_by as lastModifyBy,
        last_modify_date as lastModifyDate
    </sql>

    <!--查询所有用户信息-->
    <select id="findAllUser" resultType="com.xlbs.apiservice.entity.User">
        select
          <include refid="userField"/>
        from
          t_user
    </select>

    <!--通过userId查询用户信息-->
    <select id="findUserByUserId" resultType="com.xlbs.apiservice.entity.User">
        select
          <include refid="userField"/>
        from
          t_user
        where
          id = #{userId}
    </select>

    <!--通过username查询用户信息-->
    <select id="findUserByUsername" resultType="com.xlbs.apiservice.entity.User">
        select
          <include refid="userField"/>
        from
          t_user
        where
        user_name = #{username}
    </select>

    <!--通过name查询用户信息-->
    <select id="findUserByName" resultType="com.xlbs.apiservice.entity.User">
        select
          <include refid="userField"/>
        from
          t_user
        where
          name = #{name}
    </select>

</mapper>
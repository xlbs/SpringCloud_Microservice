<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xlbs.apiservice.dao.imp.UserDao">

    <sql id="userField">
        USER_ID AS userId,
        USER_NAME AS username,
        PASSWORD AS password,
        NAME AS name,
        DESCRIPTION AS description
    </sql>

    <!--查询所有用户信息-->
    <select id="findAllUser" resultType="java.util.Map">
        select
          <include refid="userField"/>
        from
          t_user
    </select>

    <!--通过userId查询用户信息-->
    <select id="findUserByUserId" resultType="com.xlbs.constantjar.obj.User">
        select
          <include refid="userField"/>
        from
          t_user
        where
          USER_ID = #{userId}
    </select>

    <!--通过username查询用户信息-->
    <select id="findUserByUsername" resultType="com.xlbs.constantjar.obj.User">
        select
          <include refid="userField"/>
        from
          t_user
        where
        USER_NAME = #{username}
    </select>

    <!--通过name查询用户信息-->
    <select id="findUserByName" resultType="com.xlbs.constantjar.obj.User">
        select
          <include refid="userField"/>
        from
          t_user
        where
          NAME = #{name}
    </select>

</mapper>